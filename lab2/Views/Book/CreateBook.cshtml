@model lab2.Models.Book

@{
    ViewBag.Title = "CreateBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="~/Scripts/jquery-1.10.2.min.js"> </script>
    <script src="~/Scripts/jquery.validate.min.js"> </script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"> </script>
}

<h2>CreateBook</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Book</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <table>
                <tr>
                    <td>
                        Name:
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                    <td>
                        Tac Gia
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Tacgia)
                        @Html.ValidationMessageFor(model => model.Tacgia)
                    </td>
                </tr>
                <tr>
                    <td>
                        Img_cover
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Img_cover)
                        @Html.ValidationMessageFor(model => model.Img_cover)
                    </td>
                </tr>

            </table>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
