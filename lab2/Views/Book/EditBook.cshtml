@model lab2.Models.Book

@{
    ViewBag.Title = "EditBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditBook</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    <table>
        <tr>
            <td>
                Name:
            </td>
            <td>
               @Html.TextBoxFor(model => model.Name, new {@class="form-control"})
            </td>
        </tr>
        <tr>
            <td>
                Tac Gia
            </td>
            <td>
                @Html.TextBoxFor(model => model.Tacgia ,new { @class = "form-control"})
            </td>
        </tr>
        <tr>
            <td>
                Img_cover
            </td>
            <td>
                @Html.TextBoxFor(model => model.Img_cover, new { @class = "form-control" })
            </td>
        </tr>
        <tr style="text-align:center;padding-top:28px">
            <td colspan="2">
                <input type="submit" value="Save Book" />
            </td>
        </tr>
        
    </table>
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
